{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "NovaCloud EIP",
  "description": "Novatek EIP Enterprise Integration Platform - Next.js + Prisma + Supabase + Neo4j + AI/RAG",
  "colors": {
    "primary": "#9C27B0",
    "light": "#10B981",
    "dark": "#6A1B9A"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Platform",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Architecture Overview",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Docker Containers",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images"
            ]
          },
          {
            "group": "Databases",
            "pages": [
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI & RAG",
            "pages": [
              "ai-tools/cursor"
            ]
          },
          {
            "group": "Security & Monitoring",
            "pages": [
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API",
        "groups": [
          {
            "group": "REST API",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/novatek-dev",
          "icon": "github"
        },
        {
          "anchor": "Novatek",
          "href": "https://novatek.com",
          "icon": "link"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@novatek.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.novatek.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}
