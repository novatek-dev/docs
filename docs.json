{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "NovaCloud EIP",
  "description": "Novatek EIP Enterprise Integration Platform - 5-Container Self-Hosted Architecture with Next.js, PostgreSQL, Neo4j, and AI/RAG",
  "colors": {
    "primary": "#9C27B0",
    "light": "#10B981",
    "dark": "#6A1B9A",
    "background": {
      "light": "#FFFFFF",
      "dark": "#0a0a0a"
    }
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "/"
  },
  "modeToggle": {
    "default": "light"
  },
  "topbarCtaButton": {
    "type": "github",
    "url": "https://github.com/novatek-dev/novacloud-eip"
  },
  "feedback": {
    "suggestEdit": true,
    "raiseIssue": true
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Platform",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Architecture & Design",
            "pages": [
              "essentials/settings",
              "essentials/navigation",
              "essentials/images"
            ]
          },
          {
            "group": "Container Details",
            "pages": [
              "essentials/code",
              "essentials/markdown",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "Advanced Topics",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Core Endpoints",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete"
            ]
          },
          {
            "group": "Events",
            "pages": [
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
